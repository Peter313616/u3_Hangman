<Window x:Class="u3_Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u3_Hangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtUserGuess" Text="Guess Letters Here"/>
        <Button x:Name="btnCheckGuess" Click="btnCheckGuess_Click" Content="Check Guess"/>
        <Label x:Name="lblHiddenWord" FontSize="20"/>
        <Label x:Name="lblUsedLetters"/>
        <Label x:Name="lblLivesRemianing" Content="Lives Left: 4"/>
    </StackPanel>
</Window>
